# Volume mods
set $amixer amixer -D pulse sset Master
set $twmnc twmnc --fg grey -t Volume --id 99
set $volm /usr/share/icons/gnome/16x16/status/audio-volume-high.png
set $mute /usr/share/icons/gnome/16x16/status/audio-volume-muted.png
bindsym XF86AudioRaiseVolume exec $amixer 5%+ | awk '/^  Front Left/{if($$6=="[off]"){print "-i $mute -c -MUTE-\\ "$$5}else{print "-i $volm -c "$$5} }' | tr -d "[]" | xargs $twmnc {}
bindsym XF86AudioLowerVolume exec $amixer 5%- | awk '/^  Front Left/{if($$6=="[off]"){print "-i $mute -c -MUTE-\\ "$$5}else{print "-i $volm -c "$$5} }' | tr -d "[]" | xargs $twmnc {}
bindsym XF86AudioMute exec $amixer toggle     | awk '/^  Front Left/{if($$6=="[off]"){print "-i $mute -c -MUTE-\\ "$$5}else{print "-i $volm -c "$$5} }' | tr -d "[]" | xargs $twmnc {}
bindsym Mod4+Mod1+1 exec $amixer 10%;    exec $twmnc -i $volm -c "Set to 10%"
bindsym Mod4+Mod1+2 exec $amixer 20%;    exec $twmnc -i $volm -c "Set to 20%"
bindsym Mod4+Mod1+3 exec $amixer 30%;    exec $twmnc -i $volm -c "Set to 30%"
bindsym Mod4+Mod1+4 exec $amixer 40%;    exec $twmnc -i $volm -c "Set to 40%"
bindsym Mod4+Mod1+5 exec $amixer 50%;    exec $twmnc -i $volm -c "Set to 50%"
bindsym Mod4+Mod1+6 exec $amixer 60%;    exec $twmnc -i $volm -c "Set to 60%"
bindsym Mod4+Mod1+7 exec $amixer 70%;    exec $twmnc -i $volm -c "Set to 70%"
bindsym Mod4+Mod1+8 exec $amixer 80%;    exec $twmnc -i $volm -c "Set to 80%"
bindsym Mod4+Mod1+9 exec $amixer 90%;    exec $twmnc -i $volm -c "Set to 90%"
bindsym Mod4+Mod1+0 exec $amixer toggle; exec $twmnc -i $mute -c "(un-)muted"
bindsym Mod4+Mod1+grave exec pavucontrol

