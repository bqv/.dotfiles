# resize window (you can also use the mouse for that)
mode "move/resize" {
        # These bindings trigger as soon as you enter the move/resize mode

        # grow or shrink the windowâ€™s width/height
        bindsym Shift+h resize shrink width 10 px or 10 ppt
        bindsym Shift+j resize grow height 10 px or 10 ppt
        bindsym Shift+k resize shrink height 10 px or 10 ppt
        bindsym Shift+l resize grow width 10 px or 10 ppt

        # same keys, but for the motion
        bindsym h move left
        bindsym j move down
        bindsym k move up
        bindsym l move right

        # same keys, but for the reverse growth
        bindsym Control+h resize grow width 10 px or 10 ppt; move left
        bindsym Control+j resize shrink height 10 px or 10 ppt; move down
        bindsym Control+k resize grow height 10 px or 10 ppt; move up
        bindsym Control+l resize shrink width 10 px or 10 ppt; move right

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "move/resize"

